{
    "r18": {
        "description": "是否获取R18内容（0=非R18，1=R18，2=混合）",
        "type": "int",
        "hint": "选择色图类型",
        "default": 0,
        "enum": [0, 1, 2]
    },
    "num": {
        "description": "单次返回的色图数量（1-20）",
        "type": "int",
        "hint": "每次获取的图片数量",
        "default": 1,
        "minimum": 1,
        "maximum": 20
    },
    "tag": {
        "description": "过滤标签（多个标签用OR逻辑，例如[\"萝莉|少女\"]）",
        "type": "list",
        "hint": "输入标签（可选）",
        "items": {
            "type": "string"
        },
        "default": []
    },
    "max_retries": {
        "description": "并发重试次数（同时发起的请求数）",
        "type": "int",
        "hint": "建议1-5次（避免API封禁）",
        "default": 3,
        "minimum": 1,
        "maximum": 5
    },
    "retry_delay": {
        "description": "初始重试间隔（秒）",
        "type": "int",
        "hint": "实际间隔=初始间隔×2^重试次数（指数退避）",
        "default": 2,
        "minimum": 1,
        "maximum": 5
    }
}